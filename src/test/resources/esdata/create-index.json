{
  "settings": {
    "index": {
      "number_of_shards": 10,
      "number_of_replicas": 1
    },
    "analysis": {
      "analyzer": {
        "autocomplete_name": {
          "tokenizer": "autocomplete_name",
          "filter": [
            "lowercase"
          ]
        },
        "autocomplete_initial": {
          "tokenizer": "autocomplete_initial",
          "filter": [
            "lowercase"
          ]
        },
        "autocomplete_address": {
          "tokenizer": "autocomplete_address",
          "filter": [
            "lowercase"
          ]
        },
        "autocomplete_search": {
          "tokenizer": "lowercase"
        }
      },
      "tokenizer": {
        "autocomplete_name": {
          "type": "edge_ngram",
          "min_gram": 2,
          "max_gram": 10,
          "token_chars": [
            "letter"
          ]
        },
        "autocomplete_initial": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 10,
          "token_chars": [
            "letter"
          ]
        },
        "autocomplete_address": {
          "type": "edge_ngram",
          "min_gram": 3,
          "max_gram": 10,
          "token_chars": [
            "letter"
          ]
        }
      }
    }
  },
  "mappings": {
    "document": {
      "properties": {
        "otherIds.croNumberLowercase": {
          "type": "keyword"
        },
        "otherIds.pncNumberLongYear": {
          "type": "keyword"
        },
        "otherIds.pncNumberShortYear": {
          "type": "keyword"
        },
        "dateOfBirth": {
          "type": "date",
          "format": "yyyy-MM-dd||yyyy/MM/dd||dd-MM-yy||dd/MM/yy||dd-MM-yyyy||dd/MM/yyyy"
        },
        "offenderManagers": {
          "type": "nested",
          "properties": {
            "probationArea.code": {
              "type": "keyword"
            }
          }
        },
        "firstName": {
          "type": "text",
          "analyzer": "autocomplete_initial",
          "search_analyzer": "autocomplete_search"
        },
        "surname": {
          "type": "text",
          "analyzer": "autocomplete_name",
          "search_analyzer": "autocomplete_search"
        },
        "contactDetails.addresses.town": {
          "type": "text",
          "analyzer": "autocomplete_address",
          "search_analyzer": "autocomplete_search"
        },
        "contactDetails.addresses.streetName": {
          "type": "text",
          "analyzer": "autocomplete_address",
          "search_analyzer": "autocomplete_search"
        }
      }
    }
  }
}